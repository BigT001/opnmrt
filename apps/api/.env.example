# Database
DATABASE_URL="postgresql://user:password@localhost:5432/opnmart"
DIRECT_URL="postgresql://user:password@localhost:5432/opnmart"

# JWT Authentication
JWT_SECRET="your-jwt-secret-change-in-production"

# Email Service (Resend)
RESEND_API_KEY="re_your_resend_api_key"

# Encryption for Sensitive Data (Paystack Secret Keys)
# Generate a secure key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="your-secure-random-key-minimum-32-characters-change-in-production"

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Application
NODE_ENV="development"
PORT=3001
